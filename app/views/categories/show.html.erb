
<div class="span12">
	<p class="lead"><%= link_to "All Posts", posts_path %> >> <%= @category.name %></p>
</div>

<div class="span12">
<% @category.posts.each do |post| %>

	<p>
		<%= link_to post.title, post_path(post) %><br>
		<%= post.description %><br>
		<strong> <%= post.comments.size %> comments</strong>
	</p>
	<% end %>
</div>








